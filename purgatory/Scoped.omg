data Scope :: *1 where
  Global :: Scope
  Nest :: Scope ~> Scope
 deriving Nat(s)

data Exp :: Scope ~> * where
  Here :: Exp (1+s)s
  Surrounding :: Exp s -> Exp (1+s)s
  Lam :: Exp (1+s)s -> Exp s
  App :: Exp s -> Exp s -> Exp s
  Let :: Exp s -> Exp (1+s)s -> Exp s
 deriving syntax(e) LeftPair(App) Item(Lam) Nat(Here, Surrounding)
